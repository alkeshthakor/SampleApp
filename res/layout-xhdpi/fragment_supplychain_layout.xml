<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/boothDeliveryButton"
        style="@style/myButtonThemeLeft"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="40dp"
        android:text="@string/lbl_booth_delivery"
        android:textSize="16sp" />
    
    
    <Button
        android:id="@+id/routeSummaryButton"
        style="@style/myButtonThemeRight"
        android:layout_width="match_parent"
		android:layout_height="45dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="40dp"        
        android:text="@string/lbl_route_summary"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/stockSummaryButton"
        style="@style/myButtonThemeLeft"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="40dp"
        android:text="@string/lbl_stock_summary"
        android:textSize="16sp" />
    
   
</LinearLayout>