<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyTheme" parent="MyTheme.Base"></style>
    <!-- Base theme applied no matter what API -->
    <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <!-- We will be using the toolbar so no need to show ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>

        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->


        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/Material_Teal_500</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/Material_Teal_700</item>
        <!--
         colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets
        -->
        <item name="colorAccent">@color/Material_Teal_200</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="spinBars">true</item>
    </style>

    <style name="riasedbuttonthem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="myButtonTheme" parent="riasedbuttonthem">
        <item name="android:background">@drawable/raised_button_background</item>
    </style>

    <style name="myButtonThemeLeft" parent="riasedbuttonthem">
        <item name="android:background">@drawable/booth_left_button_background</item>
    </style>

    <style name="myButtonThemeRight" parent="riasedbuttonthem">
        <item name="android:background">@drawable/booth_right_button_background</item>
    </style>

    <style name="saveButtonTheme" parent="myButtonThemeMaterial">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/save_raised_button_background</item>
    </style>

    <style name="style_wrap_content">
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">16sp</item>
    </style>
    
     <style name="style_match_parent">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
	    	    <item name="android:textSize">16sp</item>
	    
    </style>
    
    <style name="style_TextView_black" parent="style_wrap_content">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="style_TextView_black_bold" parent="style_TextView_black">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="style_TextView_white" parent="style_wrap_content">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
