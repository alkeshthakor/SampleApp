<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="50dp"
    android:orientation="vertical" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingBottom="30dp"
        android:background="@drawable/roundbackground">
        
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="@string/lbl_server_configuration"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@color/color_indigo"/>
        
         <TextView
                android:id="@+id/textView_serverhost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/lbl_server_host_ip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText_ipaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_serverinstance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/lbl_server_instance"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText_serverinstance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:digits="0123456789qwertzuiopasdfghjklyxcvbnmQWERTZUIOPASDFGHJKLYXCVBNM "
                android:singleLine="true"
                                android:textColor="@android:color/black"
                
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_server_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/lbl_user_name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText_server_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                                                android:textColor="@android:color/black"
                
                android:singleLine="true"
                android:textSize="16sp" />

            
            <TextView
                android:id="@+id/textView_server_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/lbl_password"
                
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText_server_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"
                
                android:singleLine="true"
                android:textSize="16sp" />
            
            <Button 
               android:id="@+id/saveServerconfigButton"
               android:layout_width="100dp"
               android:layout_height="40dp"
               android:layout_marginTop="20dp"
               android:textSize="16sp"
               android:layout_gravity="center_horizontal"
               style="@style/saveButtonTheme"
               android:text="@string/lbl_save"/>
            
    </LinearLayout>

</LinearLayout>
